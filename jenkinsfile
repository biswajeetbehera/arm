pipeline {
    agent any

    stages {

        stage ('compile stage') {

            steps {
                withMaven(maven: 'maven_3_5_0') {
                    sh 'clean compile'
                }
            }
        }
         
        stage ('test stage') {

            steps {
                withMaven(maven : 'maven_3_5_0') {
                    sh 'test'
                }
            }
        }
        stage ('Deployment stage') {

            steps {
                withMaven(maven : 'maven_3_5_0') {
                    sh 'deploy'
                }
            }
        }      
    }
}      
